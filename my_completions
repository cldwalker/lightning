#for my code directories
c () {
  cd `~/.bash/completion/basename_to_full_path.rb -k code $@`
}

#for gem directories
gcd () {
  cd `~/.bash/completion/basename_to_full_path.rb -k gem $@`
}

gm () {
  mate `~/.bash/completion/basename_to_full_path.rb -k gem $@`
}

grd () {
  open `~/.bash/completion/basename_to_full_path.rb -k gem_rdoc $@`/rdoc/index.html
}

gri () {
  ri -d `~/.bash/completion/basename_to_full_path.rb -k gem_rdoc $1`/ri ${@:2}
}

#for ruby core + standard libraries
rcd () {
 cd `~/.bash/completion/basename_to_full_path.rb -k ruby_core $@` 
}

rcvi () {
 vim `~/.bash/completion/basename_to_full_path.rb -k ruby_core $@` 
}

rvi () {
 vim `~/.bash/completion/basename_to_full_path.rb -k rails_project $@` 
}

oa () {
 open -a `~/.bash/completion/basename_to_full_path.rb -k osx_app $@`
}

#Point shell functions to their autocompletions
complete -o default -C "~/.bash/completion/path_completer.rb code" c
complete -o default -C "~/.bash/completion/path_completer.rb gem" gcd gm
complete -o default -C "~/.bash/completion/path_completer.rb gem_rdoc" grd gri
complete -o default -C "~/.bash/completion/path_completer.rb ruby_core" rcd rcvi
complete -o default -C "~/.bash/completion/path_completer.rb osx_app" oa
complete -o default -C "~/.bash/completion/path_completer.rb rails_project" rvi
