LBIN_PATH="/home/bozo/code/gems/lightning/bin"
       
#my code directories
c () {
  FULL_PATH="`$LBIN_PATH/lightning-full_path.rb cd-c $@`"
  if [ $1 == '-test' ]; then
    CMD="cd '$FULL_PATH'"
    echo $CMD
  else
    cd "$FULL_PATH"
  fi
}
complete -o default -C "$LBIN_PATH/lightning-complete.rb cd-c" c


