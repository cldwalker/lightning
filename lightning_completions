#Change this to match this project's base directory
LBIN_PATH="/home/bozo/code/gems/lightning/bin"
#note: could use $(dirname $(readlink -f $0)) for above but doesn't work by default for mac

#for my code directories
c () {
  cd `$LBIN_PATH/lightning-full_path.rb code $@`
}

#for gem directories
gcd () {
  cd `$LBIN_PATH/lightning-full_path.rb gem $@`
}

gm () {
  mate `$LBIN_PATH/lightning-full_path.rb gem $@`
}

grd () {
  open `$LBIN_PATH/lightning-full_path.rb gem_rdoc $@`/rdoc/index.html
}

gri () {
  ri -d `$LBIN_PATH/lightning-full_path.rb gem_rdoc $1`/ri ${@:2}
}

#for ruby core + standard libraries
rcd () {
 cd `$LBIN_PATH/lightning-full_path.rb ruby_core_dir $@` 
}

rcvi () {
 vim `$LBIN_PATH/lightning-full_path.rb ruby_core $@` 
}

rrvi () {
 vim `$LBIN_PATH/lightning-full_path.rb rails_project $@` 
}

rvi () {
 vim `$LBIN_PATH/lightning-full_path.rb ruby_project $@` 
}

oa () {
 open -a `$LBIN_PATH/lightning-full_path.rb osx_app $@`
}

#Point shell functions to their autocompletions
complete -o default -C "$LBIN_PATH/lightning-complete.rb code" c
complete -o default -C "$LBIN_PATH/lightning-complete.rb gem" gcd gm
complete -o default -C "$LBIN_PATH/lightning-complete.rb gem_rdoc" grd gri
complete -o default -C "$LBIN_PATH/lightning-complete.rb ruby_core" rcvi
complete -o default -C "$LBIN_PATH/lightning-complete.rb ruby_core_dir" rcd
complete -o default -C "$LBIN_PATH/lightning-complete.rb osx_app" oa
complete -o default -C "$LBIN_PATH/lightning-complete.rb rails_project" rrvi
complete -o default -C "$LBIN_PATH/lightning-complete.rb ruby_project" rvi
