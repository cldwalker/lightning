#open gem's doc in browser
grd () {
  FULL_PATH="`${LBIN_PATH}lightning-full_path gem_rdoc $@`/rdoc/index.html"
  if [ $1 == '-test' ]; then
    CMD="open '$FULL_PATH'"
    echo $CMD
  else
    open "$FULL_PATH"
  fi
}
complete -o default -C "${LBIN_PATH}lightning-complete gem_rdoc" grd

#access ri documentation limited to this gem
gri () {
  FULL_PATH="`${LBIN_PATH}lightning-full_path gem_rdoc $@`/ri"
  if [ $1 == '-test' ]; then
    CMD="ri -d '$FULL_PATH' ${@:2}"
    echo $CMD
  else
    ri -d "$FULL_PATH" ${@:2}
  fi
}
complete -o default -C "${LBIN_PATH}lightning-complete gem_rdoc" gri

