#LBIN_PATH="$PWD/bin/" #only use for development
LBIN_PATH="" 
       
#my code directories
c () {
  FULL_PATH="`${LBIN_PATH}lightning-full_path cd-c $@`"
  if [ $1 == '-test' ]; then
    CMD="cd '$FULL_PATH'"
    echo $CMD
  else
    cd "$FULL_PATH"
  fi
}
complete -o default -C "${LBIN_PATH}lightning-complete cd-c" c


